	protected void onImpact(MovingObjectPosition var1) {
		// TODO Auto-generated method stub
		if (!this.worldObj.isRemote) {
			this.worldObj.newExplosion(this, this.posX, this.posY, this.posZ, 8.0F, false, true);
	        this.setDead();
	    }
	}

}
